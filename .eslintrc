{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "forOf": true,
      "jsx": true,
      "es6": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "jasmine": true,
    "node": true,
    "mocha": true,
    "amd": true,
    "browser": true,
    "builtin": true
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "import/extensions": 0,
    "react/prefer-stateless-function": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0
  }
}
